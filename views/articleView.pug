extends layouts/layoutDefault

block content
	main(role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4")
		div(class="row")
			div(class="col-md-12")
					h3 Titre de l'article
					p #{article.title}
			div(class="col-md-4")
				h3 Catégories
				div(class="row")
				if categories && categories.length > 0
					each category in categories
						if category.id_article == article.id
							a(href=`http://localhost:3000/${category.id}`)
								span(class="badge badge-secondary" ) #{unescape(category.tag)}
			div(class="col-md-10" id='contentArticle')
				h3 Contenue de l'article
				p #{article.content}
			div(class="col-md-12")
				div(class="row")
					div(class="col-md-6")
						p(id="author") Auteur : #{article.author}
						p Date de création : #{article.date}
			div(class="col-md-6 d-flex justify-content-between")
				a(href="http://localhost:3000/" class="btn btn-dark") Retour